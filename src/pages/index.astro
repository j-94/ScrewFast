import { Image } from 'astro:assets';
import HeadshotPrice from "@/components/headshot-price.astro";
import HeadshotHero from "@/components/headshot-hero.astro";
import Webflow from "@/components/webflow.astro";
const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title="Transform Your Commercial Space with Expert Flooring Solutions"
    subTitle="Durable, Attractive, and Sustainable Flooring for Every Business"
    primaryBtn="Explore Our Services"
    primaryBtnURL="/services"
    secondaryBtn="Request a Free Consultation"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`From Over <span class="font-bold">100</span> Reviews`
    src={heroImage}
   
    alt="Commercial flooring installation in progress"
  />
  <HeadshotPrice />
  
  <HeadshotHero />
  
  <Webflow />
  

  <FeaturesGeneral
    title="Why Choose JMB Floors?"
    subTitle="At JMB Floors, we provide top-quality flooring solutions tailored to your business needs. From consultation to installation, our experienced team ensures your project is completed on time and within budget."
    src={featureImage}
    alt="Completed commercial flooring project"
    features={features}
  />

  <TestimonialsSection
    title="What Our Clients Say"
    testimonials={[
      {
        content:
          "JMBFlooring has been exceeded our expectations with their professional installation and high-quality flooring. Our office has never looked better!",
        author: "John Smith",
        role: "Project Manager",
        avatarSrc: "https://randomuser.me/api/portraits/men/1.jpg",
      },
    ]}
  />
  </section>
<!-- 
