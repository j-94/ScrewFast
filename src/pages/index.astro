import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from  '@images/commercial flooring/JMB.A.COM07.jpg';
import construction from  '@images/commercial flooring/JMB.A.COM07.jpg';
import tools from  '@images/commercial flooring/JMB.A.COM07.jpg';
import dashboard from  '@images/commercial flooring/JMB.A.COM07.jpg';
import PricingSection from "@components/sections/pricing/PricingSection.astro";
